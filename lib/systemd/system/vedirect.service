[Unit]
Description=VE.Direct serial monitor
After=multi-user.target

[Service]
Type=simple
User=pi
Group=pi
WorkingDirectory=/home/pi/serial-reader
EnvironmentFile=/home/pi/serial-reader/.env
ExecStart=/usr/bin/python -u reader.py --broker=${MQTT_BROKER_IP} --client-id=${MQTT_CLIENT_ID} --username="${MQTT_USERNAME}" --password="${MQTT_PASSWORD}"
StandardOutput=syslog
StandardError=syslog

[Install]
WantedBy=multi-user.target