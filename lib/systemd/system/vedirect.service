[Unit]
Description=VE.Direct serial monitor
After=multi-user.target

[Service]
Type=simple
User=pi
Group=pi
WorkingDirectory=/home/pi/ve.direct-python
EnvironmentFile=/home/pi/ve.direct-python/.env.installed
ExecStart=/usr/bin/python -u src/reader.py --influx=${INFLUX_HOST} --database=${INFLUX_DB} --port=${SERIAL_PORT}
StandardOutput=syslog
StandardError=syslog
RestartSec=5s
Restart=always

[Install]
WantedBy=multi-user.target